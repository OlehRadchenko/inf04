<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#F5F5DC">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gra w kości. Autor: Oleh Radchenko"
            android:background="#A52A2A"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/rzucKoscmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RZUĆ KOŚĆMI"
            android:layout_gravity="center"
            android:backgroundTint="#D2691E"
            android:textColor="#FFF"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#FFF">

            <ImageView
                android:id="@+id/kosc1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/question" />
            <ImageView
                android:id="@+id/kosc2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/question" />
            <ImageView
                android:id="@+id/kosc3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/question" />
            <ImageView
                android:id="@+id/kosc4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/question" />
            <ImageView
                android:id="@+id/kosc5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/question" />
        </LinearLayout>
        <TextView
            android:id="@+id/wynikLosowania"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wynik tego losowania: "
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/wynikGry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wynik gry: "
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESETUJ WYNIK"
            android:layout_gravity="center"
            android:backgroundTint="#D2691E"
            android:textColor="#FFF"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>