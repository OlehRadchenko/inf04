<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#90EE90">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wizyta u weterynarza"
            android:background="#2E8B57"
            android:textSize="35sp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/imieWlasciciela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Imię i nazwisko właściciela..."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gatunek"/>
        <ListView
            android:id="@+id/gatunekLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ile ma lat? "/>
            <TextView
                android:id="@+id/ileMaLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
            <SeekBar
                android:id="@+id/ileLatSeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="20"
                android:progress="0"/>
        </LinearLayout>
        <EditText
            android:id="@+id/celWizyty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cel wizyty"/>
        <EditText
            android:id="@+id/czasWizyty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:text="16:00"/>
        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"/>
        <TextView
            android:id="@+id/komunikat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>